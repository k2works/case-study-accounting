{
  "name": "",
  "version": "0.0.0",
  "main": "index.js",
  "scripts": {
    "start": "gulp dev",
    "journal": "gulp journal:generate",
    "docs:serve": "gulp mkdocs:serve",
    "docs:stop": "gulp mkdocs:stop",
    "docs:build": "gulp mkdocs:build",
    "claude:yol": "claude --dangerously-skip-permissions",
    "prepare": "husky",
    "frontend:lint": "cd apps/frontend && npm run lint",
    "frontend:format": "cd apps/frontend && npm run format:check",
    "frontend:test": "cd apps/frontend && npm run test:run",
    "frontend:check": "cd apps/frontend && npm run lint && npm run format:check",
    "backend:check": "cd apps/backend && ./gradlew.bat check"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/k2works/{project_name}.git"
  },
  "keywords": [
    "ai",
    "programming",
    "learning"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/k2works/{project_name}/issues"
  },
  "homepage": "https://github.com/k2works/{project_name}#readme",
  "type": "module",
  "dependencies": {
    "gulp": "^5.0.0"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "apps/frontend/src/**/*.{ts,tsx}": "npm run frontend:check",
    "apps/frontend/src/**/*.css": "npm run frontend:format"
  }
}
