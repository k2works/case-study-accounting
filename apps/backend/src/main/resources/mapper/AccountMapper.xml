<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.accounting.infrastructure.persistence.mapper.AccountMapper">

    <!-- ResultMap 定義 -->
    <resultMap id="accountResultMap" type="com.example.accounting.infrastructure.persistence.entity.AccountEntity">
        <id property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="name" column="name"/>
        <result property="accountType" column="account_type"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
    </resultMap>

    <!-- INSERT -->
    <insert id="insert" parameterType="com.example.accounting.infrastructure.persistence.entity.AccountEntity"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO accounts (
            code, name, account_type
        ) VALUES (
            #{code}, #{name}, #{accountType}
        )
    </insert>

    <!-- UPDATE -->
    <update id="update" parameterType="com.example.accounting.infrastructure.persistence.entity.AccountEntity">
        UPDATE accounts SET
            code = #{code},
            name = #{name},
            account_type = #{accountType},
            updated_at = CURRENT_TIMESTAMP
        WHERE id = #{id}
    </update>

    <!-- SELECT by ID -->
    <select id="findById" resultMap="accountResultMap">
        SELECT * FROM accounts WHERE id = #{id}
    </select>

    <!-- SELECT by Code -->
    <select id="findByCode" resultMap="accountResultMap">
        SELECT * FROM accounts WHERE code = #{code}
    </select>

    <!-- SELECT All -->
    <select id="findAll" resultMap="accountResultMap">
        SELECT * FROM accounts ORDER BY code ASC
    </select>

    <!-- SELECT by Type -->
    <select id="findByType" resultMap="accountResultMap">
        SELECT * FROM accounts WHERE account_type = #{accountType} ORDER BY code ASC
    </select>

    <!-- Search with optional filters -->
    <select id="search" resultMap="accountResultMap">
        SELECT * FROM accounts
        <where>
            <if test="accountType != null and accountType != ''">
                account_type = #{accountType}
            </if>
            <if test="keyword != null and keyword != ''">
                AND (code LIKE CONCAT(#{keyword}, '%') OR name LIKE CONCAT('%', #{keyword}, '%'))
            </if>
        </where>
        ORDER BY code ASC
    </select>

    <!-- DELETE by ID -->
    <delete id="deleteById">
        DELETE FROM accounts WHERE id = #{id}
    </delete>

    <!-- EXISTS by Code -->
    <select id="existsByCode" resultType="boolean">
        SELECT COUNT(*) > 0 FROM accounts WHERE code = #{code}
    </select>

</mapper>
